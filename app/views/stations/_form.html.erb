<%= simple_form_for @station, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.label :product %>
  <%= f.select :product_id , Product.all.map { |r| [r.name, r.id] }, :include_blank=>true %>
  <%#= f.input :estimation_id , :type=>"hidden" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stations_path, :class => 'btn' %>
  </div>
<% end %>
